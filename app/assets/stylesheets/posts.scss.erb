.post {
  margin-bottom: 55px;
  margin-top: 20px;
  margin-left: auto;
  margin-right: auto;
  text-align: left;
}

.post-title {
  font-size: 20px;
  font-weight: bold;
  font-family: sans-serif;
  color: black;
  line-height: 25px;
  text-align: left;
  margin-bottom: 3px;
}

$sub-color: #a3a3a3;

.post-date {
  font-size: 15px;
  color: $sub-color;
  font-family: sans-serif;
  margin-bottom: 10px;

}

.post-content {
  margin-top: 20px;
  clear: both;
  font-size: 18px;
  line-height: 1.6;
  text-align: left;
  font-weight: normal;
  color: black;
  position: relative;
  overflow: visible;

  pre {
    font-family: Consolas,monaco,"Ubuntu Mono",courier,monospace!important;
    padding: 16px;
    overflow: auto;
    font-size: 90%;
    line-height: 1.45;
    background-color: #f7f7f7;
    border-radius: 3px;
  }

  p code {
    font-family: Consolas,monaco,"Ubuntu Mono",courier,monospace!important;
    font-size: .75rem;
    line-height: .75rem;
    color: #c25;
    padding: 4px 8px;
    background-color: #f7f7f9;
    border: 1px solid #e1e1e8;
    border-radius: 3px;
  }

  img {
    display: block;
    margin-left: auto;
    margin-right: auto;
    max-width: 120%;
    margin: 0px -10%;
    margin-top: 30px;
  }

  a {
    text-decoration: underline !important;
  }
}

.like-container {
  position: relative;
  height: 30px;
  margin-left: -8px;
  padding-top: 12px;
}

.like-button {
  background-color: white;
  border: none;
  display: inline-block;
  vertical-align: middle;
  cursor: pointer;

  &:focus {
    outline:0;
  }
}

.liked {
  fill: #<%= BLOG_CONFIG["background_color"] %>;
  pointer-events: none;
}

.unliked {
  fill: #<%= BLOG_CONFIG["background_color"] %>;
  pointer-events: none;
}

.hidden {
  display: none;
}

.like-count {
  font-family: sans-serif;
  font-size: 16px;
  text-align: left;
  margin-left: -6px;
  color: $sub-color;
  margin-top: -7px;
  display: inline-block;
  vertical-align: middle;
}
